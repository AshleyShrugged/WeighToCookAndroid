<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.weightocook.weightocook.BlueberryCobblerBluetoothSteps" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bluetooth: "
        android:id="@+id/textView34"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="btStatus"
        android:id="@+id/cobblerBtStatus"
        android:layout_alignTop="@+id/textView34"
        android:layout_toRightOf="@+id/textView34"
        android:layout_toEndOf="@+id/textView34" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Tap the ingredient you&apos;d like to add!\n"
        android:id="@+id/textView36"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 cup flour"
        android:id="@+id/flourButton"
        android:layout_below="@+id/textView36"
        android:layout_centerHorizontal="true"
        android:onClick="flourTapped"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 cup sugar"
        android:id="@+id/sugarButton"
        android:layout_below="@+id/flourButton"
        android:layout_centerHorizontal="true"
        android:onClick="sugarTapped"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 cup milk"
        android:id="@+id/milkButton"
        android:layout_below="@+id/sugarButton"
        android:layout_centerHorizontal="true"
        android:onClick="milkTapped"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Flour: 0%"
        android:id="@+id/flourAddedDisplay"
        android:layout_below="@+id/milkButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sugar: 0%"
        android:id="@+id/sugarAddedDisplay"
        android:layout_below="@+id/flourAddedDisplay"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Milk: 0%"
        android:id="@+id/milkAddedDisplay"
        android:layout_below="@+id/sugarAddedDisplay"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next step"
        android:id="@+id/nextStepButton"
        android:layout_below="@+id/milkAddedDisplay"
        android:layout_alignRight="@+id/textView36"
        android:layout_alignEnd="@+id/textView36"
        android:layout_marginTop="39dp"
        android:onClick="selectNextStep"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/miscDisplay"
        android:layout_alignBottom="@+id/nextStepButton"
        android:layout_alignLeft="@+id/textView36"
        android:layout_alignStart="@+id/textView36" />
</RelativeLayout>
