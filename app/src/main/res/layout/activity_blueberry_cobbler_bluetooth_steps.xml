<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.weightocook.weightocook.BlueberryCobblerBluetoothSteps"
    android:background="#4682B4">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Bluetooth: "
        android:id="@+id/textView34"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Finding..."
        android:id="@+id/cobblerBtStatus"
        android:layout_alignTop="@+id/textView34"
        android:layout_toRightOf="@+id/textView34"
        android:layout_toEndOf="@+id/textView34" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text=""
        android:id="@+id/blankDisplay"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 cup flour"
        android:id="@+id/flourButton"
        android:layout_below="@+id/blankDisplay"
        android:layout_centerHorizontal="true"
        android:onClick="flourTapped"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 cup sugar"
        android:id="@+id/sugarButton"
        android:layout_below="@+id/flourButton"
        android:layout_centerHorizontal="true"
        android:onClick="sugarTapped"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 cup milk"
        android:id="@+id/milkButton"
        android:layout_below="@+id/sugarButton"
        android:layout_centerHorizontal="true"
        android:onClick="milkTapped"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Flour: 0%"
        android:id="@+id/flourAddedDisplay"
        android:layout_below="@+id/milkButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Sugar: 0%"
        android:id="@+id/sugarAddedDisplay"
        android:layout_below="@+id/flourAddedDisplay"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Milk: 0%"
        android:id="@+id/milkAddedDisplay"
        android:layout_below="@+id/sugarAddedDisplay"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/testingDisplay"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONON"
        android:id="@+id/button6"
        android:layout_above="@+id/textView34"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="selectMonOn"
        android:visibility="invisible" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MONOFF"
        android:id="@+id/button7"
        android:layout_above="@+id/cobblerBtStatus"
        android:layout_toRightOf="@+id/button6"
        android:layout_toEndOf="@+id/button6"
        android:onClick="selectMonOff"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="next step"
        android:id="@+id/nextStepButton"
        android:layout_above="@+id/testingDisplay"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="selectNextStep"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="\n"
        android:id="@+id/textView36"
        android:layout_below="@+id/milkAddedDisplay"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tap the ingredient you&apos;d \nlike to add first!"
        android:id="@+id/miscDisplay"
        android:layout_below="@+id/textView36"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
